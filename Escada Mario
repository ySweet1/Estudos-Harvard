#include <stdio.h>
#include <cs50.h>

int main(void){
    int n;

    do
    n= get_int("escolha um numero de 1 a 8:\n");

    while(n<1 || n>8);

    for(int i = 0; i<n; i++){
        for(int j = 0; j<n; j++){
            if(n - i - 2 < j){
            printf("#");
            }
            else{
            printf(" ");
            }
        }
        printf("\n");
    }


}
